---
import type { Playlist } from "../lib/data";
interface Props{
    elemento:Playlist
} 
const {elemento} =Astro.props;
const {
    id,
    cover,
    title,
    artists,
    color
}=elemento

const artistString = artists.join(", ")
---

<a href={`/Songs/${id}`} 
class="playlist-item flex transition-all duraciton-300 relative p-2 overflow-hidden items-start gap-5 text-gray-300 rounded-md
 hover:bg-zinc-700 hover:text-gray-50 shadow-lg hover:shadow-xl 2xl:w-52 xl:w-32 flex-col   hover:scale-[118%] hover:bg-gradient-to-t hover:from-zinc-900 hover:to-zinc-600/20">
<picture class="aspect-square w-full h-auto flex-none "  >
    <img 
    src={cover} 
    alt=`cover of ${title} by ${artistString}`
     class="object-cover w-full h-full rounded-md "
     transition:name=`playlist ${id} image`>
    
</picture>

<div class="flex flex-auto  flex-col truncate  text-sm px-2 ">
    <h4 class="font-bold">
        {title}
    </h4>
    <span class="text-xs ">
        {artistString}
    </span>
</div>

</a>